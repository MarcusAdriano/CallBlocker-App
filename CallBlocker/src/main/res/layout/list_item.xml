<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:id="@+id/list_item_context_text" >

        <TextView
            android:id="@+id/list_item_textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            android:text="Teste" />

        <TextView
            android:id="@+id/list_item_textview_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItemSmall"
            android:text="+5516998706657" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_toRightOf="@+id/list_item_context_text"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal">

        <CheckBox
            android:id="@+id/list_item_checkbox_call"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:enabled="true"
            android:button="@drawable/selector_call"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <CheckBox
            android:id="@+id/list_item_checkbox_sms"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:enabled="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="invisible"
            android:button="@drawable/selector_sms"/>

    </LinearLayout>
</LinearLayout>